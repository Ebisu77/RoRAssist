<Page x:Class="RoRAssistWinApp.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoRAssistWinApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="DefaultPage">


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="turnOrderButton" Content ="Turn Order" Width="Auto"/>
            <Button x:Name="stateTreasuryButton" Content="State Treasury" Width="Auto" Click="StateTreasuryButton_Click"/>
            <Button x:Name="persuadeButton" Content="Persuasion" Width="Auto" Click="PersuadeButton_Click"  />
            <Button x:Name="senateButton" Content="Senate" Width="Auto" Click="SenateButton_Click" />
            <Button x:Name="combatButton" Content="Combat" Width="Auto"/>
        </StackPanel>
        <Frame Name="FrameGameplayContent" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Grid>
</Page>
