<Page x:Class="RoRAssist.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoRAssist.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="DefaultPage">

    
        <Grid Margin="10,10,0,0" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content ="Turn Order" Width="Auto"/>
            <Button Content="State Treasury" Width="Auto"/>
            <Button Content="Persuade" Width="Auto" Click="clickPersuadeButton" />
            <Button Content="Senate" Width="Auto"/>
            <Button Content="Combat" Width="Auto"/>
        </StackPanel>
        <Frame Name="FrameGameplayContent" Grid.Row="1" />

    </Grid>
</Page>
