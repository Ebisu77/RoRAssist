<Page x:Class="RoRAssist.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoRAssist.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="MainPage">


    <Grid Name="mainGrid" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Button x:Name="continueButton"  Content="Continue Session" 
                    Margin="20" Click="continueButton_Click"                    />
            <Button x:Name="startButton"  Content="New Session" 
                    Margin="20"
                    Click="startButton_Click"/>
            <Button x:Name="quitButton" Content="Quit" 
                    Margin="20"
                    Click="quitButton_Click"/>
        </StackPanel>
        <TextBlock Name="versionTextBlock" Grid.Row="2"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Text="{Binding}"/>

    </Grid>
</Page>
